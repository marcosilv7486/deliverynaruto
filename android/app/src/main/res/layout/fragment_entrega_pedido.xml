<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.marcosilv7.narutodelivery.ui.fragments.segundo.hijos.EntregaPedidoFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent" android:orientation="vertical"
                android:layout_height="wrap_content" android:layout_margin="10dp" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Introduzca una direccion de envio"
                    android:textAlignment="viewStart"
                    android:textColor="@color/colorBottomNavigationPrimary"
                    android:textSize="24sp"
                    android:textStyle="bold" />
            </LinearLayout>


            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/direccionnueva"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="visible">
                <EditText
                    android:id="@+id/txtNombreContactoCrudDireccion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:drawablePadding="5dp"
                    android:drawableLeft="@drawable/ic_person_black_24dp"
                    android:ems="10"
                    android:hint="Nombre / Quien recibe"/>

                <EditText
                    android:id="@+id/txtDireccionCrudDireccion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:drawablePadding="5dp"
                    android:layout_weight="1"
                    android:drawableLeft="@drawable/ic_address_black_24dp"
                    android:ems="10"
                    android:hint="Direccion"/>


                <EditText
                    android:id="@+id/txtDistritoCrudDireccion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:drawablePadding="5dp"
                    android:layout_weight="1"
                    android:drawableLeft="@drawable/ic_city_black_24dp"
                    android:ems="10"
                    android:hint="Distrito"/>


                <EditText
                    android:id="@+id/txtTelefonoCrudDireccion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:drawablePadding="5dp"
                    android:layout_weight="1"
                    android:drawableLeft="@drawable/ic_local_phone_black_24dp"
                    android:ems="10"
                    android:hint="Telefono"/>


                <Button
                    android:id="@+id/btnContinuar"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_marginTop="20dip"
                    android:background="@color/colorPrimary"
                    android:text="Continuar"
                    android:textColor="@android:color/white" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/direccionmemoria"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="visible">

                <TextView
                    android:id="@+id/txtDatosDireccion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:background="#F8F8FF"
                    android:minLines="4" />

                <Button
                    android:id="@+id/btnEntregarDireccion"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_marginTop="20dip"
                    android:background="@color/colorPrimary"
                    android:text="Entregar a esta direccion"
                    android:textColor="@android:color/white" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >
                    <Button android:id="@+id/btnEditarDireccion"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="Editar" />
                    <Button android:id="@+id/btnEliminarDireccion"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="Eliminar" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</FrameLayout>
