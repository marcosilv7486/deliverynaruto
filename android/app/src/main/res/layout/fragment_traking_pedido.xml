<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.fragments.tercero.hijos.TrakingPedidoFragment">

    <include layout="@layout/toolbar"/>
    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                app:cardElevation="2dp"
                card_view:cardCornerRadius="9dp"
                card_view:cardUseCompatPadding="true"
                xmlns:card_view="http://schemas.android.com/tools"
                xmlns:app="http://schemas.android.com/apk/res-auto">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="200dp" />
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                app:cardElevation="2dp"
                card_view:cardCornerRadius="9dp"
                card_view:cardUseCompatPadding="true"
                xmlns:card_view="http://schemas.android.com/tools"
                xmlns:app="http://schemas.android.com/apk/res-auto">

                <LinearLayout
                    android:layout_width="match_parent" android:orientation="vertical"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="match_parent" android:orientation="horizontal"
                        android:weightSum="11"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_width="0dp" android:orientation="vertical"
                            android:layout_weight="2"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:src="@drawable/ic_check_circle_blue_24dp" />
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="2"
                                android:text="CONFIRMADO"
                                android:textAlignment="center"
                                android:textColor="@color/colorPrimary"
                                android:textSize="10sp" />
                        </LinearLayout>




                        <View style="@style/DividerBlue" android:layout_gravity="center"
                            android:layout_width="0dp"
                            android:layout_weight="1"/>

                        <LinearLayout
                            android:layout_width="0dp" android:orientation="vertical"
                            android:layout_weight="2"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:src="@drawable/ic_local_cafe_blue_24dp" />
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="2"
                                android:text="COCINANDO"
                                android:textAlignment="center"
                                android:textColor="@color/colorPrimary"
                                android:textSize="10sp" />
                        </LinearLayout>

                        <View style="@style/DividerBlue" android:layout_gravity="center"
                            android:layout_width="0dp"
                            android:layout_weight="1"/>

                        <LinearLayout
                            android:layout_width="0dp" android:orientation="vertical"
                            android:layout_weight="2"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:src="@drawable/ic_motorcycle_blue_24dp" />
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="2"
                                android:text="ENVIADO"
                                android:textAlignment="center"
                                android:textColor="@color/colorPrimary"
                                android:textSize="10sp" />
                        </LinearLayout>

                        <View style="@style/DividerBlue"  android:layout_gravity="center"
                            android:layout_width="0dp"
                            android:layout_weight="1"/>
                        <LinearLayout
                            android:layout_width="0dp" android:orientation="vertical"
                            android:layout_weight="2"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:src="@drawable/ic_local_dining_blue_24dp" />
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="2"
                                android:text="ENTREGADO"
                                android:textAlignment="center"
                                android:textColor="@color/colorPrimary"
                                android:textSize="10sp" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                app:cardElevation="2dp"
                card_view:cardCornerRadius="9dp"
                card_view:cardUseCompatPadding="true"
                xmlns:card_view="http://schemas.android.com/tools"
                xmlns:app="http://schemas.android.com/apk/res-auto">
                <LinearLayout
                    android:layout_width="match_parent" android:orientation="vertical"
                    android:layout_height="wrap_content">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_margin="10dp"
                            android:text="Detalle de la orden"
                            android:textColor="@color/colorPrimary"
                            style="@style/textLayout" />
                    </RelativeLayout>
                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:id="@+id/txtNombreCompleto"
                        android:layout_height="wrap_content">

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:drawableLeft="@drawable/ic_person_outline_gray_24dp"
                            android:drawablePadding="10dp"
                            android:drawableStart="@drawable/ic_person_outline_gray_24dp"
                            android:enabled="false"
                            android:hint="Nombre Completo"
                            android:singleLine="true"
                            android:text="PEPITO DOS PALOTES"
                           style="@style/textLayout"/>
                    </android.support.design.widget.TextInputLayout>
                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:id="@+id/txtTelefono"
                        android:layout_height="wrap_content">

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:drawableLeft="@drawable/ic_local_phone_gray_24dp"
                            android:drawablePadding="10dp"
                            android:drawableStart="@drawable/ic_local_phone_gray_24dp"
                            android:enabled="false"
                            android:hint="Teléfono"
                            android:singleLine="true"
                            android:text="942696048"
                           style="@style/textLayout"/>
                    </android.support.design.widget.TextInputLayout>
                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:id="@+id/txtDireccionEntrega"
                        android:layout_height="wrap_content">

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:drawableLeft="@drawable/ic_location_on_gray_24dp"
                            android:drawablePadding="10dp"
                            android:drawableStart="@drawable/ic_location_on_gray_24dp"
                            android:enabled="false"
                            android:hint="Direccion"
                            android:singleLine="false"
                            android:text="Mi Casa 3004 Lima Peru America del Sur , Tierra, Via Lactea"
                           style="@style/textLayout"/>
                    </android.support.design.widget.TextInputLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_margin="10dp"
                            android:text="Forma de Pago"
                            android:textColor="@color/colorPrimary"
                           style="@style/textLayout"/>
                    </RelativeLayout>
                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:id="@+id/txtFormaPago"
                        android:layout_height="wrap_content">

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:drawableLeft="@drawable/ic_attach_gray_black_24dp"
                            android:drawablePadding="10dp"
                            android:drawableStart="@drawable/ic_attach_gray_black_24dp"
                            android:enabled="false"
                            android:hint="Medio de Pago"
                            android:singleLine="true"
                            android:text="EFECTIVO"
                           style="@style/textLayout"/>
                    </android.support.design.widget.TextInputLayout>
                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:id="@+id/txtTipoFacturacion"
                        android:layout_height="wrap_content">

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:drawableLeft="@drawable/ic_insert_drive_file_gray_24dp"
                            android:drawablePadding="10dp"
                            android:drawableStart="@drawable/ic_insert_drive_file_gray_24dp"
                            android:enabled="false"
                            android:hint="Tipo de Facturacion"
                            android:singleLine="true"
                            android:text="BOLETA"
                           style="@style/textLayout"/>
                    </android.support.design.widget.TextInputLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_margin="10dp"
                            android:text="Productos"
                            android:textColor="@color/colorPrimary"
                           style="@style/textLayout"/>
                    </RelativeLayout>
                    <android.support.v7.widget.RecyclerView android:id="@+id/recyclerView"
                        android:layout_width="match_parent"
                        android:layout_margin="10dp"
                        android:layout_height="wrap_content">
                    </android.support.v7.widget.RecyclerView>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_margin="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/textLayout"
                            android:textColor="@color/colorPrimary"
                            android:layout_alignParentStart="true"
                            android:text="Importe" />
                    </RelativeLayout>
                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:id="@+id/lblSubtotal"
                        android:layout_height="wrap_content">
                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:drawableLeft="@drawable/ic_attach_gray_black_24dp"
                            android:drawablePadding="10dp"
                            android:drawableStart="@drawable/ic_attach_gray_black_24dp"
                            android:enabled="false"
                            android:hint="Total"
                            android:singleLine="true"
                            style="@style/textLayout"
                            android:text="EFECTIVO" />
                    </android.support.design.widget.TextInputLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_weight="2"
        android:src="@drawable/ic_local_dining_blue_24dp" />
</LinearLayout>