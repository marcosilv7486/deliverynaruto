<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.fragments.cuarto.hijos.AgregarDireccionFragment">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" android:orientation="vertical">
        <include layout="@layout/toolbar"/>

        <EditText
            android:id="@+id/txtAliasAgregarDireccion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:drawablePadding="5dp"
            android:drawableLeft="@drawable/ic_person_black_24dp"
            android:ems="10"
            android:hint="Alias*"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/txtTelefonoAgregarDireccion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:drawablePadding="5dp"
            android:drawableLeft="@drawable/ic_local_phone_black_24dp"
            android:ems="10"
            android:hint="TelÃ©fono"
            android:inputType="phone" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp" android:layout_margin="10dp"
            android:id="@+id/previewMapaAgregarDireccion"/>

        <Button
            android:id="@+id/btnCrearUsuario"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_marginTop="20dip"
            android:background="@color/colorPrimary"
            android:text="Guardar"
            android:textColor="@android:color/white" />
    </LinearLayout>
</FrameLayout>