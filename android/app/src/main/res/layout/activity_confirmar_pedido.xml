<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/toolbar"/>
    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!-- CLIENTE -->
            <android.support.v7.widget.CardView
                android:id="@+id/cardView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                app:cardElevation="2dp"
                card_view:cardCornerRadius="9dp"
                card_view:cardUseCompatPadding="true"
                xmlns:card_view="http://schemas.android.com/tools"
                xmlns:app="http://schemas.android.com/apk/res-auto">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:layout_height="wrap_content">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                style="@style/textLayout"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentStart="true"
                                android:layout_margin="10dp"
                                android:text="Cliente"
                                android:textColor="@color/colorPrimary" />
                        </RelativeLayout>
                    </LinearLayout>
                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <EditText
                            android:id="@+id/txtNombreCompleto"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:drawableLeft="@drawable/ic_person_outline_gray_24dp"
                            android:drawablePadding="10dp"
                            style="@style/textLayout"
                            android:drawableStart="@drawable/ic_person_outline_gray_24dp"
                            android:enabled="false"
                            android:text="PEPITO DOS PALOTES"
                            android:hint="Nombre Completo"
                            android:singleLine="true" />
                    </android.support.design.widget.TextInputLayout>
                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <EditText
                            android:id="@+id/txtTelefono"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:drawableLeft="@drawable/ic_local_phone_gray_24dp"
                            android:drawablePadding="10dp"
                            style="@style/textLayout"
                            android:drawableStart="@drawable/ic_local_phone_gray_24dp"
                            android:enabled="false"
                            android:text="942696048"
                            android:hint="TelÃ©fono"
                            android:singleLine="true" />
                    </android.support.design.widget.TextInputLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            style="@style/textLayout"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_margin="10dp"
                            android:text="Direccion de Entrega"
                            android:textColor="@color/colorPrimary" />
                    </RelativeLayout>
                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <EditText
                            android:id="@+id/txtDireccionEntrega"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:drawableLeft="@drawable/ic_location_on_gray_24dp"
                            android:drawablePadding="10dp"
                            android:drawableStart="@drawable/ic_location_on_gray_24dp"
                            android:enabled="false"
                            style="@style/textLayout"
                            android:text="Mi Casa 3004 Lima Peru America del Sur , Tierra, Via Lactea"
                            android:hint="Direccion"
                            android:singleLine="false" />
                    </android.support.design.widget.TextInputLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_margin="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/textLayout"
                            android:textColor="@color/colorPrimary"
                            android:layout_alignParentStart="true"
                            android:text="Forma de Pago" />
                    </RelativeLayout>
                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <EditText
                            android:id="@+id/txtFormaPago"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:drawableLeft="@drawable/ic_attach_gray_black_24dp"
                            android:drawablePadding="10dp"
                            android:drawableStart="@drawable/ic_attach_gray_black_24dp"
                            android:enabled="false"
                            android:hint="Medio de Pago"
                            android:singleLine="true"
                            style="@style/textLayout"
                            android:text="EFECTIVO" />
                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <EditText
                            android:id="@+id/txtTipoFacturacion"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:drawableLeft="@drawable/ic_insert_drive_file_gray_24dp"
                            android:drawablePadding="10dp"
                            android:drawableStart="@drawable/ic_insert_drive_file_gray_24dp"
                            android:enabled="false"
                            android:hint="Tipo de Facturacion"
                            android:singleLine="true"
                            style="@style/textLayout"
                            android:text="BOLETA" />
                    </android.support.design.widget.TextInputLayout>
                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/textInputLayoutNumeroRuc"
                        app:counterEnabled="true"
                        android:visibility="gone"
                        app:counterMaxLength="11">

                        <EditText
                            android:id="@+id/txtNumeroRuc"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:drawableLeft="@drawable/ic_account_balance_black_24dp"
                            android:drawablePadding="10dp"
                            android:drawableStart="@drawable/ic_account_balance_black_24dp"
                            android:ems="10"
                            android:enabled="false"
                            style="@style/textLayout"
                            android:hint="Ruc"
                            android:inputType="number"
                            android:maxLength="11"
                            android:singleLine="true" />
                    </android.support.design.widget.TextInputLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_margin="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/textLayout"
                            android:textColor="@color/colorPrimary"
                            android:layout_alignParentStart="true"
                            android:text="Productos" />
                    </RelativeLayout>
                    <android.support.v7.widget.RecyclerView android:id="@+id/recyclerView"
                        android:layout_width="match_parent"
                        android:layout_margin="10dp"
                        android:layout_height="wrap_content">
                    </android.support.v7.widget.RecyclerView>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_margin="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/textLayout"
                            android:textColor="@color/colorPrimary"
                            android:layout_alignParentStart="true"
                            android:text="Importe a Pagar" />
                    </RelativeLayout>
                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <EditText
                            android:id="@+id/lblSubtotal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:drawableLeft="@drawable/ic_attach_gray_black_24dp"
                            android:drawablePadding="10dp"
                            android:drawableStart="@drawable/ic_attach_gray_black_24dp"
                            android:enabled="false"
                            android:hint="Total"
                            android:singleLine="true"
                            style="@style/textLayout"
                            android:text="EFECTIVO" />
                    </android.support.design.widget.TextInputLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>
            <Button
                android:layout_width="match_parent"
                android:layout_marginLeft="5dp"
                android:id="@+id/btnRealizarPedido"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="5dp"
                style="@style/textLayout"
                android:background="@color/colorPrimary"
                android:textColor="@android:color/white"
                android:text="REALIZAR PEDIDO"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</LinearLayout>