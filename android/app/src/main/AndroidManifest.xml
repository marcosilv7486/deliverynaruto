<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.marcosilv7.narutodelivery">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".config.MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_logo_boruto"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_logo_boruto"
        android:supportsRtl="true"
        android:theme="@style/AppThemePrincipal">
        <service android:name=".MyFirebaseInstanceIDService">
            <intent-filter>
                <action android:name="com.google.firebase.INSTANCE_ID_EVENT" />
            </intent-filter>
        </service>

        <activity
            android:name=".ui.SplashActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppThemePrincipal">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.LoginActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.PrincipalActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.RegistrarUsuarioActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.cooltechworks.creditcarddesign.CardEditActivity"
            android:screenOrientation="portrait" />

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="AIzaSyBFt0L2H-2lhSU8rw3ieNzAXHbV6_il94c" />

        <activity android:name=".ui.AgregarTarjetaActivity" />
        <activity android:name=".ui.PedidoEnviadoActivity" />
        <activity android:name=".ui.SeleccionarDireccionActivity" />
        <activity android:name=".ui.SeleccionFormaPagoActivity" />
        <activity android:name=".ui.ConfirmarPedidoActivity"></activity>
    </application>

</manifest>