<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.marcosilv7.narutodelivery">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".config.MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_logo_boruto"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_logo_boruto"
        android:supportsRtl="true"
        android:theme="@style/AppThemePrincipal">
        <activity
            android:name=".SplashActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppThemePrincipal">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".LoginActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".MainActivity"
            android:label="@string/title_activity_principal"
            android:screenOrientation="portrait"
            android:theme="@style/AppThemePrincipal" />
        <activity
            android:name=".PrincipalActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".RegistrarUsuarioActivity"
            android:screenOrientation="portrait" />
        <activity android:name=".AddressActivity" />
        <activity android:name=".TipoPagoActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppThemePrincipal"></activity>

    </application>

</manifest>